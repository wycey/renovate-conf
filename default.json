{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticPrefixChore",
    ":semanticCommitScope(deps)",
    ":automergeMinor",
    "schedule:daily",
    "customManagers:biomeVersions"
  ],
  "baseBranches": ["$default", "develop"],
  "autoApprove": true,
  "minimumReleaseAge": "3 days",
  "timezone": "Asia/Tokyo",
  "enabledManagers": ["npm", "github-actions", "dockerfile", "docker-compose"],
  "reviewers": ["team:developers"],
  "labels": ["deps"],
  "rollback": {
    "autoApprove": false,
    "automerge": false,
    "addLabels": ["hotfix"],
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "groupName": "Disable autoApprove for major updates",
      "matchUpdateTypes": ["major"],
      "autoApprove": false
    },
    {
      "groupName": "Enable automerge for devDependencies",
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
